---
import { Github, Linkedin, Mail } from "lucide-react";

const { t } = Astro.props as { t: Function };
const navLinks = [
  { name: t("nav.home"), href: "#home" },
  { name: t("nav.about"), href: "#about" },
  { name: t("nav.projects"), href: "#projects" },
  { name: t("nav.skills"), href: "#skills" },
  { name: t("nav.contact"), href: "#contact" },
];
---

<footer
  class="mt-10 border-t border-blue-900/30 py-6 md:py-8 bg-[rgba(0,0,10,0.7)] backdrop-blur"
>
  <div class="container mx-auto px-4 md:px-6">
    <div
      class="flex flex-col-reverse md:grid md:grid-cols-3 justify-between items-center gap-4 md:gap-8"
    >
      <div class="text-center md:text-left">
        <p class="text-sm text-blue-300">© 2025 Rolando Uzcátegui</p>
      </div>

      <div class="flex justify-center items-center gap-5">
        <a
          href="https://github.com/RolandoU548"
          target="_blank"
          class="text-blue-400 hover:text-blue-300 transition-colors"
        >
          <Github className="h-5 w-5" />
          <span class="sr-only">GitHub</span>
        </a>
        <a
          href="https://www.linkedin.com/in/rolando-uzc%C3%A1tegui/"
          target="_blank"
          class="text-blue-400 hover:text-blue-300 transition-colors"
        >
          <Linkedin className="h-5 w-5" />
          <span class="sr-only">LinkedIn</span>
        </a>
        <a
          href="mailto:rolandou548@gmail.com"
          class="mail-bubble text-blue-400 hover:text-blue-300 transition-colors"
        >
          <Mail className="h-5 w-5" />
          <span class="sr-only">Mail</span>
        </a>
      </div>

      <nav class="flex gap-4 md:gap-6">
        {
          navLinks.map((navLink) => {
            return (
              <a
                href={navLink.href}
                class="text-xs text-blue-300 hover:text-blue-100 hover:underline underline-offset-4"
              >
                {navLink.name}
              </a>
            );
          })
        }
      </nav>
    </div>
  </div>
</footer>
